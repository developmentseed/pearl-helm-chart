---
layout: none
---
{%- assign pearl-helm = site.data.index.entries.pearl-helm | sort: 'created' | reverse -%}

{%- assign pearl_helm_latest = pearl-helm | first -%}

{%- capture "pearl_helm_stable_version" -%}
{%- for chart in pearl-helm -%}
    {%- unless chart.version contains "-" -%}
        {{ chart.version }};
    {%- endunless -%}
{%- endfor -%}
{%- endcapture -%}
{%- assign pearl_helm_stable_version = pearl_helm_stable_version | split: ";" | first -%}

{%- capture "pearl_helm_pre_version" -%}
{%- for chart in pearl-helm -%}
    {%- assign dots_count_after_dash = chart.version | split: "-" | shift | first | split: "." | size | minus: 1 -%}
    {%- assign first_char_after_dash = chart.version | split: "-" | shift | first | slice: 0 -%}
    {%- if chart.version contains "-" -%}
        {%- if dots_count_after_dash == 1 -%}
            {%- if first_char_after_dash != "n" -%}
                {{ chart.version }};
            {%- endif -%}
        {%- endif -%}
    {%- else -%}
        {{ chart.version }};
    {%- endif -%}
{%- endfor -%}
{%- endcapture -%}
{%- assign pearl_helm_pre_version = pearl_helm_pre_version | split: ";" | first -%}


{
    "pearl-helm":
        {
            "stable": "{{ pearl_helm_stable_version }}",
            "pre": "{{ pearl_helm_pre_version }}",
            "dev": "{{ pearl_helm_latest.version }}",
            "latest": "{{ pearl_helm_latest.version }}"
        }
}
